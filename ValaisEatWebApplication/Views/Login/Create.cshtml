@model DTO.Login

@{
    ViewData["Title"] = "Create";
}

    <div class="container">
        <h2>Create your login</h2>


        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="login" class="control-label"></label>              
                        <input asp-for="login" class="form-control" type="email" placeholder="email" />
                        <span asp-validation-for="login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
</div>

