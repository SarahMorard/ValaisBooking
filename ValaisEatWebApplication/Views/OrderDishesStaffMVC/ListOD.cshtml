@model IEnumerable<DTO.Order_Dishes>

@{
    ViewData["Title"] = "ListOD";
}

<div class="container">
    <h2>Choose your order dishes number you want to edit</h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Order dishes n°
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.idOrder_Dishes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    <td>
                        <button type="button" class="btn btn-info"> @Html.ActionLink("Archive", "Archive", new { id = item.idOrder_Dishes }) </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
