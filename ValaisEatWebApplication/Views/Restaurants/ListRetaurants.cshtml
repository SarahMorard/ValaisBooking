@model IEnumerable<DTO.Restaurants>

@{
    ViewData["Title"] = "ListRetaurants";
}

<h2>ListRetaurants</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idRestaurant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city_id)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idRestaurant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city_id)
            </td>
    
            <td>
                <button type="button" class="btn btn-info">@Html.ActionLink("ListAllDishesPerResto", "ListAllDishesPerResto", new { id = item.idRestaurant })</button>
</td>
        </tr>
}
    </tbody>
</table>
